{
  "name": "lehl-pulse",
  "version": "1.0.0",
  "private": true,
  "description": "Fantasy hockey league history tracker and analytics platform",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "db:generate": "turbo run db:generate --filter=@lehl-pulse/database",
    "db:push": "turbo run db:push --filter=@lehl-pulse/database",
    "db:studio": "turbo run db:studio --filter=@lehl-pulse/database",
    "db:reset": "pnpm docker:reset && sleep 5 && pnpm db:push",
    "backfill": "tsx scripts/backfill.ts"
  },
  "devDependencies": {
    "tsx": "^4.19.1",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3"
}
